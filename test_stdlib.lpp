#pragma paradigm hybrid

// Test standard library functions

fn main() -> int {
    // Test string functions
    let str = "Hello, World!";
    print("Original: ");
    print(str);
    print("\n");
    
    print("Length: ");
    print(lpp::stdlib::len(str));
    print("\n");
    
    print("Uppercase: ");
    print(lpp::stdlib::toUpper(str));
    print("\n");
    
    print("Lowercase: ");
    print(lpp::stdlib::toLower(str));
    print("\n");
    
    // Test split and join
    let parts = lpp::stdlib::split(str, ", ");
    print("Split result size: ");
    print(lpp::stdlib::len(parts));
    print("\n");
    
    let joined = lpp::stdlib::join(parts, " - ");
    print("Joined: ");
    print(joined);
    print("\n");
    
    // Test slice
    let sliced = lpp::stdlib::slice(str, 0, 5);
    print("Sliced (0-5): ");
    print(sliced);
    print("\n");
    
    // Test contains
    if (lpp::stdlib::contains(str, "World")) {
        print("Contains 'World': true\n");
    }
    
    // Test startsWith and endsWith
    if (lpp::stdlib::startsWith(str, "Hello")) {
        print("Starts with 'Hello': true\n");
    }
    
    if (lpp::stdlib::endsWith(str, "!")) {
        print("Ends with '!': true\n");
    }
    
    // Test replace
    let replaced = lpp::stdlib::replace(str, "World", "L++");
    print("Replaced: ");
    print(replaced);
    print("\n");
    
    // Test repeat
    let repeated = lpp::stdlib::repeat("Ha", 3);
    print("Repeated: ");
    print(repeated);
    print("\n");
    
    // Test reverse
    let reversed = lpp::stdlib::reverse("abcde");
    print("Reversed: ");
    print(reversed);
    print("\n");
    
    return 0;
}
