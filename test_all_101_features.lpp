// Feature #1-10: Type System
fn demoTypes() -> void {
    let num: int = 42;
    let arr: int[] = [1, 2, 3];
    let nullable: int? = 100;
    let result: int = nullable ?? 0;
}

// Feature #11-20: Generators with Yield
fn* range(start: int, end: int) -> int {
    let i: int = start;
    while (i < end) {
        yield i;
        i++;
    }
}

// Feature #21-30: Type Guards
fn checkType(value: any) -> string {
    if (typeof value == "int") {
        return "integer";
    }
    return "unknown";
}

// Feature #31-40: Switch with Guards
fn gradeWithGuard(score: int) -> string {
    switch (score) {
        case 90 when score >= 95:
            return "A+";
        case 90:
            return "A";
        case 80:
            return "B";
        default:
            return "F";
    }
}

// Feature #41-50: Getters and Setters
class Person {
    let _name: string;
    let _age: int;
    
    get name() -> string {
        return _name;
    }
    
    set name(value: string) -> void {
        _name = value;
    }
}

// Feature #51-60: GOLFED Paradigm (ultra-short)
fn s(x: int) -> int { <- x * 2; }
fn a(x: int, y: int) -> int { x + y; }

// Feature #61-70: Async/Await
async fn fetchUser(id: int) -> string {
    return "User data";
}

// Feature #71-80: Autopattern
autopattern Configuration AppConfig;
autopattern Factory UserFactory;

// Feature #81-90: Advanced Control Flow
fn fibonacci(n: int) -> int {
    if (n <= 1) {
        return n;
    }
    return fibonacci(n - 1) + fibonacci(n - 2);
}

// Feature #91-101: All Paradigms Combined
class Calculator {
    fn add(a: int, b: int) -> int { <- a + b; }
    fn multiply(x: int, y: int) -> int { x * y; }
}

fn main() -> void {
    let calc: Calculator = Calculator();
    let sum: int = calc.add(5, 3);
    let product: int = calc.multiply(4, 7);
}

